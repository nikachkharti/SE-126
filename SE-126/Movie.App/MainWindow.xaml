<Window x:Class="Movie.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Movie.App"
        mc:Ignorable="d"
        Title="მთავარი" Height="500" Width="1000" WindowStartupLocation="CenterScreen" Background="#FFF">
    <StackPanel>
        <TextBlock x:Name="headerLabelContainer" Margin="12" HorizontalAlignment="Center">
            <Label x:Name="headerLabel" FontSize="20" FontWeight="SemiBold" FontFamily="FiraGO" Foreground="Goldenrod">ქვეყნების ჩამონათვალი</Label>
        </TextBlock>

        <StackPanel x:Name="notificationBtnContainer" Width="250">
            <Button x:Name="notificatioBtn" Cursor="Hand" Padding="12" FontSize="15" Click="notificatioBtn_Click">მაჩვენე შეტყობინება</Button>
        </StackPanel>


    </StackPanel>
</Window>
